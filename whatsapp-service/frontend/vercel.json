{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs22.x"
    },
    "api/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  
  engines": { "node": "22.x" }
  
}
{
  "name": "whatsapp-baileys-service",
  "version": "1.0.0",
  "description": "WhatsApp Web API Service using Baileys for Academic Manager",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && cp ./config.mjs ./dist/config.mjs || true",
    "start": "node dist/server.js",
    "postinstall": "npm run build",
    "dev": "nodemon --watch server.ts --exec \"ts-node server.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "whatsapp-web",
    "api",
    "academic",
    "bot",
    "automation",
    "whatsapp-bot"
  ],
  "author": "MahdyHQ",
  "license": "MIT",
  "engines": {
    "node": ">=24.11.0",
    "npm": ">=11.6.2"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "7.0.0-rc.6",
    "axios": "^1.13.1",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "lucide-static": "^0.552.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "redis": "^5.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MahdyHQ/whatsapp-academic-manager.git",
    "directory": "whatsapp-service"
  },
  "bugs": {
    "url": "https://github.com/MahdyHQ/whatsapp-academic-manager/issues"
  },
  "homepage": "https://github.com/MahdyHQ/whatsapp-academic-manager#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

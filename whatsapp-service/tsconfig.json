{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["server.ts", "**/*.ts", "**/*.js", "config.mjs"],
  "exclude": ["node_modules", "dist", "frontend", "frontend/**"]
}
